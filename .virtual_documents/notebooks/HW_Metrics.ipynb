def get_slopes(ds):
    ret = np.zeros((ds.shape[1], ds.shape[2]))
    for i in range(ds.shape[1]):
        for j in range(ds.shape[2]):
            slope, inter, rval, pval, stderr = linregress(np.arange(ds.shape[0]), ds[:, i, j])
            ret[i, j] = slope
    return ret

